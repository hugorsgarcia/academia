# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===================
# APPLICATION CONFIG
# ===================
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
APP_NAME=Academia Management System
APP_VERSION=1.0.0

# ===================
# DATABASE CONFIG
# ===================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=academia_db
DB_USER=root
DB_PASSWORD=
DB_CONNECTION_LIMIT=10
DB_TIMEOUT=60000

# ===================
# JWT CONFIG
# ===================
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# ===================
# REDIS CONFIG
# ===================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CONNECT_TIMEOUT=10000

# ===================
# AWS S3 CONFIG
# ===================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=academia-uploads
AWS_S3_URL=https://your-bucket.s3.amazonaws.com

# ===================
# STRIPE PAYMENT CONFIG
# ===================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===================
# MERCADO PAGO CONFIG
# ===================
MERCADO_PAGO_ACCESS_TOKEN=your_mercado_pago_access_token
MERCADO_PAGO_PUBLIC_KEY=your_mercado_pago_public_key
MERCADO_PAGO_WEBHOOK_SECRET=your_mp_webhook_secret

# ===================
# PAGAR.ME CONFIG
# ===================
PAGARME_API_KEY=your_pagarme_api_key
PAGARME_ENCRYPTION_KEY=your_pagarme_encryption_key

# ===================
# EMAIL CONFIG (SMTP)
# ===================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_app_password
MAIL_FROM=noreply@academia.com
MAIL_FROM_NAME=Academia System

# ===================
# SMS CONFIG (TWILIO)
# ===================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===================
# WHATSAPP CONFIG
# ===================
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_TOKEN=your_whatsapp_business_token

# ===================
# LOGGING CONFIG
# ===================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ===================
# RATE LIMITING
# ===================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=true

# ===================
# FILE UPLOAD CONFIG
# ===================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,video/mp4
UPLOAD_PATH=uploads/

# ===================
# CORS CONFIG
# ===================
CORS_ORIGIN=http://localhost:3000,http://localhost:9002
CORS_CREDENTIALS=true

# ===================
# SESSION CONFIG
# ===================
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# ===================
# QR CODE CONFIG
# ===================
QR_CODE_SIZE=200
QR_CODE_MARGIN=4
QR_CODE_ERROR_CORRECTION=M

# ===================
# NOTIFICATION CONFIG
# ===================
NOTIFICATION_QUEUE_NAME=notifications
NOTIFICATION_DELAY_MS=1000
NOTIFICATION_RETRY_ATTEMPTS=3

# ===================
# CACHE CONFIG
# ===================
CACHE_TTL=3600
CACHE_MAX_KEYS=1000

# ===================
# BACKUP CONFIG
# ===================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===================
# MONITORING CONFIG
# ===================
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ENABLED=true

# ===================
# DEVELOPMENT CONFIG
# ===================
DEBUG=academia:*
SWAGGER_ENABLED=true
SEED_DATA=true