{
  "name": "academia-backend",
  "version": "1.0.0",
  "description": "Complete gym management system backend with Node.js, Express, MySQL, JWT, and payment integrations",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "build": "babel src -d dist",
    "docker:build": "docker build -t academia-backend .",
    "docker:run": "docker-compose up -d"
  },
  "keywords": [
    "gym",
    "fitness",
    "management",
    "express",
    "mysql",
    "jwt",
    "payments",
    "api"
  ],
  "author": "Academia System",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "mysql2": "^3.6.5",
    "knex": "^3.0.1",
    "objection": "^3.1.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "aws-sdk": "^2.1491.0",
    "stripe": "^14.9.0",
    "mercadopago": "^2.0.11",
    "pagarme": "^4.18.0",
    "redis": "^4.6.11",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "qrcode": "^1.5.3",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-fileupload": "^1.4.3",
    "sharp": "^0.33.1",
    "cron": "^3.1.6",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@types/node": "^20.10.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!src/migrations/**",
      "!src/seeds/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}