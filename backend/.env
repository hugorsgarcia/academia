# Environment Variables
NODE_ENV=development
PORT=3002
API_URL=http://localhost:3001
APP_NAME=Academia Management System
APP_VERSION=1.0.0

# Database Config (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=academia_db
DB_USER=root
DB_PASSWORD=User-120164360
DB_CONNECTION_LIMIT=10
DB_TIMEOUT=60000

# JWT Config
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production_123456789
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_here_987654321
JWT_REFRESH_EXPIRES_IN=7d

# Redis Config
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CONNECT_TIMEOUT=10000

# CORS Config
CORS_ORIGIN=http://localhost:3000,http://localhost:9002
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=true

# File Upload Config
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,video/mp4
UPLOAD_PATH=uploads/

# Logging Config
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Cache Config
CACHE_TTL=3600
CACHE_MAX_KEYS=1000

# Email Config (deixe vazio por enquanto)
MAIL_HOST=
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=
MAIL_PASS=
MAIL_FROM=noreply@academia.com
MAIL_FROM_NAME=Academia System

# Development Config
DEBUG=academia:*
SWAGGER_ENABLED=true
SEED_DATA=true